<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <button onClick="handleForgotPassword()">send reset password</button>
    <div class="show-success"></div>
    <script>
      function handleForgotPassword() {
        const url = "http://localhost:4000/api/v1/auth/forgot-password";
        const data = { email: "reodev2003@gmail.com" };
        fetch(url, {
          method: "POST", // *GET, POST, PUT, DELETE, etc.

          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data), // body data type must match "Content-Type" header
        })
          .then((response) => response.json())
          .then((json) => {
            document.querySelector(".show-success").innerHTML = json.message;
          });
      }
    </script>
  </body>
</html>
